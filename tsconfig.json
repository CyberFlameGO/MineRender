{
  "compilerOptions": {
    "sourceMap": true,
    "declaration": true,
//    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "experimentalDecorators": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "module": "CommonJS",
    "target": "es2018",
    "outDir": "lib",
    "lib": [
      "es6",
      "dom"
    ],
    "typeRoots": [
      "node_modules/@types"
    ],
    "baseUrl": "."
  },
  "exclude": [
    "node_modules",
    "dist",
    "lib"
  ]
}
